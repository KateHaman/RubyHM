<div class="card">
  <div class="card-body">
    <div class="comment-header">
      <h4>Comment by: <%= @post.author.full_name %></h4>
      <h4>Updated <%= distance_of_time_in_words(Time.now, comment.updated_at) %> ago.</h4>
    </div>
    <h4>Comment: <%= comment.body %> </h4>
    <% if comment.unpublished? %>
    <%= link_to "Publish", post_comment_path(@post, comment, status: 1), method: :put, class: "btn btn-dark" %>
    <% end %>
  </div>
</div>