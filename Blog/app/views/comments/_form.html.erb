<%= form_with model: [@post, @post.comments.build] do |form| %>
  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= form.label :author, class: "form-label" %>
        <%= form.select :author_id, Author.all.collect { |a| [a.full_name, a.id] }, class: "form-select" %>
      </div>

      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class: "input", placeholder: "Comment" %>
      </div>

      <div class="new-post-submit-btn">
        <%= form.submit "Submit", class: "btn btn-dark" %>
      </div>
    </div>
  </div>
<% end %>