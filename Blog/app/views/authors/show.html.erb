<h1>Profile</h1>
<div class="profile-info">
  <div class="profile-info-item">
    <% if current_author.avatar.present? %>
      <%= image_tag current_author.avatar, width: '150px', height: '150px', class: 'rounded-circle' %>
    <% else %>
      <%= image_tag("avatar.png", height: '200', width: '200', class: 'rounded-circle') %>
    <% end %>
  </div>
  <div class="profile-info-item">
    <strong>First name:</strong>
    <%= @author.first_name %>
  </div>
  <div class="profile-info-item">
    <strong>Last name:</strong>
    <%= @author.last_name %>
  </div>
  <div class="profile-info-item">
    <% if @author.gender %>
      <strong>Gender:</strong>
      <%= @author.gender %>
    <% end %>
  </div>
  <div class="profile-info-item">
    <% if @author.birthday %>
      <strong>Birthday:</strong>
      <%= @author.birthday.to_time.strftime('%B %e, %Y') %>
    <% end %>
  </div>
  <% if current_author %>
    <%= link_to 'Edit', edit_author_path(current_author), class: "btn btn-warning" %>
  <% end %>
</div>
