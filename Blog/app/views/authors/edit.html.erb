<div class="d-flex justify-content-between">
  <div class="header-btn" data-bs-toggle="tooltip" title="Back to posts">
    <%= link_to '', posts_path, class: "btn btn-dark fa fa-arrow-left" %>
  </div>
  <h2>Editing Author</h2>
</div>

<p id="notice"><%= notice %></p>
<div class="edit-profile-form">
  <%= form_for current_author do |form| %>
    <div class="edit-profile-field">
      <%== form.text_field :first_name, class: "form-control", placeholder: "First name" %>
    </div>
    <div class="edit-profile-field">
      <%== form.text_field :last_name, class: "form-control", placeholder: "Last name" %><br>
    </div>
    <div class="edit-profile-field">
      <%== form.text_field :gender, class: "form-control", placeholder: "Gender" %><br>
    </div>
    <div class="edit-profile-field">
      <%== form.text_field :birthday, class: "form-control", placeholder: "Birthday" %><br>
    </div>
    <div class="sign-up-field">
      <%== form.file_field :avatar, class: "form-control" %>
      <div class="form-text">Please upload an avatar.</div>
    </div>
    <div class="edit-profile-btn">
      <%= form.submit "Submit", class: "btn btn-dark" %>
    </div>
    </div>
  <% end %>
